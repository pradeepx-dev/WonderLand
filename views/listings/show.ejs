<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-3">
    <!-- <h3>Listing details :</h3> -->
    <b><%= listing.title %></b><br /><br />
  </div>
  <div class="card col-6 offset-3 listing-card">
    <img
      src="<%= listing.image %>"
      class="card-img-top show-image"
      alt="listings"
    />
    <div class="card-body">
      <p class="card-text">
        <%= listing.description %><br /><br />
        &#8377;<%= listing.price.toLocaleString("en-IN") %><br /><br />
        <%= listing.location %><br /><br />
        <%= listing.country %><br /><br />
      </p>
    </div>
  </div>
  <br />
  <div class="btns mb-5">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-2 offset-3 add-btn">Edit</a>
    <form action="/listings/<%= listing._id %>/?_method=DELETE" method="post">
      <button class="btn btn-dark offset-4">Delete</button>
    </form>
  </div>

  <hr />
  <div class="col-8 offset-3 mb-3">
    <h1>Leave a Review</h1>
    <form action="/listings/<%= listing.id  %>/reviews" method="POST" novalidate class="needs-validation">
      <div class="mb-3 mt-3">
        <label for="rating" class="formm-label">Rating</label>
        <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" required>
      </div>
      <div class="mb-3 mt-3">
        <label for="comment" class="formm-label">Comment</label>
        <textarea col="30" rows="5" id="comment" name="review[comment]" class="form-control" required></textarea>
        <div class="invalid-feedback">Please submit some comments for review</div>
      </div>
      <button class="btn btn-outline-dark">Submit</button>
    </form>

    <hr>

    <p><b>All Reviews</b></p>
    <div class="row">
    <% for (let review of listing.review) { %>
      <div class="card col-5 ms-2 mb-2 ">
        <div class="card-body">
          <h5 class="card-title">Unknown</h5>
          <p class="card-text"><%= review.comment %></p>
          <p class="card-text"><%= review.rating %>‚≠ê</p>
        </div>
      </div>
      <% } %>
    </div>
    
  </div>
</div>